<% if Feature.active?(:dynamic_directory) %>
  <div class="temp-dynamic-directory-container">
    <%= render 'shared/directory', items: category_navigation %>
  </div>
<% else %>
  <%= render 'shared/directory', items: t('.featured').map(&:to_ostruct) %>
<% end %>

<%= render 'shared/promos', items: t('.promoted') %>
