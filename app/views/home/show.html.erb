<% set_meta_tags(canonical: root_url,
                 alternate: alternate_home_map,
                 description: t('.description').strip) %>

<%= render 'shared/trust_banner' %>

<% if Feature.active?(:dynamic_directory) %>
  <%= render 'shared/directory',
             items: directory_categories %>
<% else %>
  <%= render 'shared/directory',
             items: t('.featured').map { |f| OpenStruct.new(f) } %>
<% end %>


<%= render 'shared/promos', items: t('.promoted') %>
