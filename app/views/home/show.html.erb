<% content_for :head do %>
  <script type="application/ld+json">
    {
       "@context": "http://schema.org",
       "@type": "WebSite",
       "url": "https://www.moneyadviceservice.org.uk/en",
       "potentialAction": {
         "@type": "SearchAction",
         "target": "https://www.moneyadviceservice.org.uk/en/search?query={search_term_string}",
         "query-input": "required name=search_term_string"
       }
    }
  </script>
<% end %>

<% set_meta_tags(canonical:   root_url,
                 alternate:   alternate_home_map,
                 title:       t('.title'),
                 description: t('.description').strip) %>


<%= heading_tag t('layouts.base.title'), class: 'visually-hidden' %>

<svg style="display: none;">
  <symbol id="icon-arrow-right" viewBox="0 0 22 34">
    <polygon points="0,5 5,0 22,17 5.1,34 0,29 12,17" />
  </symbol>
</svg>

<div class="l-home-top">
  <div class="l-home-top__image"></div>
  <div class="l-constrained">
    <%= render 'shared/trust_banner', items: t('.trust_banner_list') %>
    <%= render 'shared/promo_link' %>
  </div>
</div>

<div class="l-home-directory">
  <div class="l-constrained">
    <%= heading_tag(level: heading_level ||= 2, class: 'l-home-directory__title') do %>
      <%= t('.directory_heading') %>
    <% end %>
    <%= render 'shared/directory', items: category_navigation %>
  </div>
</div>

<%= render 'shared/tool_promos', items: t('.tools') %>
<%= render 'shared/article_promos', items_with_image: t('.promoted'), items_without_image: t('.promoted_no_image') %>

<%= render 'shared/stripe_banner', item: t('.stripe_banner') %>
