<%= image_tag('campaign/interest-rate-rise-campaign-bg.jpg', alt: '', class: 'l-campaign-image') %>

<div class="l-constrained">
  <section class="l-debtmanagement">
    <div class="l-debtmanagement__inner">
      <h1><%= t('page_heading') %></h1>
      <% t('section_one.content').each do |item| %>
        <p><%= item[:text] %></p>
      <% end %>
    </div>

    <%= image_tag('http://placehold.it/300x300', alt: '', class: 'l-debtmanagement__image-small') %>
    <a class="l-debtmanagement__button button button--primary" href="#go_to_faq"><%= t('primary_button') %></a>
  </section>

  <section class="l-debtmanagement">
    <%= image_tag('http://placehold.it/300x300', alt: '', class: 'l-debtmanagement__image-small l-debtmanagement__image-small--left') %>
    <div class="l-debtmanagement__inner">
      <h2><%= t('section_two.heading') %></h2>
      <% t('section_two.content').each do |item| %>
        <p><%= raw item[:text] %></p>
      <% end %>
    </div>
  </section>


  <section class="l-debtmanagement">
    <h2><%= t('section_three.heading') %></h2>
    <%= raw t('section_three.advice_benefits') %>
  </section>

  <section class="l-debtmanagement">
  <h2><%= t('section_four.heading') %></h2>
    <form>
      <% t('countries').each do |item| %>
        <label class="l-debtmanagement__radio-item"><input type="radio" name="country_group" /><%= item[:text] %></label>
      <% end %>
    </form>
  </section>

  <section class="l-debtmanagement">
    <h3>Options available to you</h3>

    <% t('advisors').each do |country, advisors| %>
      <section data-country="<%= country %>">
        <% advisors.each do |advisor| %>
          <section class="debt-advisor l-debtmanagement__advisor">
            <%= image_tag(advisor[:logo], alt: advisor[:company_name]) %>
            <p><%= advisor[:description] %></p>
            <h4 class="debt-advisor__heading"><%= advisor[:chat_heading] %></h4>
            <p><%= advisor[:chat_description] %></p>
            <h5 class="debt-advisor__subheading"><%= advisor[:opening_hours_heading] %></h5>
            <%= raw advisor[:chat_opening_hours_html] %>
            <a href="" class="button button--primary"><%= advisor[:button] %></a>
            <h4 class="debt-advisor__heading"><%= advisor[:phone_heading] %></h4>
            <a href="tel:%<%= advisor[:phone_number] %>"><%= advisor[:phone_number_readable] %></a>
            <h5 class="debt-advisor__subheading"><%= advisor[:opening_hours_heading] %></h5>
            <%= raw advisor[:phone_opening_hours] %>
            <a href="mailto:<%= advisor[:email] %>"><%= advisor[:email] %></a>
          </section>
      <% end %>
      </section>
    <% end %>
  </section>
</div>

<div class="l-tool-advert">
  <div class="l-constrained">
    <div class="l-tool-advert__inner">
      <h2 class="l-tool-advert__heading"><%= t('tool_advert.heading') %></h2>
      <p><%= t('tool_advert.description_html') %></p>
    </div>
  </div>
</div>
