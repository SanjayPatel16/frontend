                    <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#svg-icon--stripe-banner-arrow"></use>
                  </svg>
                </a>
              </div>
            </div>

            <div class="l-content-hub__module content-hub__module--hdr-lnks-cta">
              <div class="l-content-hub__module__inner">
                <%= heading_tag 'Managing money', class: 'content-hub__module__title heading-medium', level: 1 %>
