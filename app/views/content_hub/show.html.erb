<% set_meta_tags(title: 'Content Hub') %>

<div class="l-content-hub__main">
  <div class="l-content-hub__inner">
    <div class="l-constrained">
      <section class="l-content-hub__title">
        <%= heading_tag t('content_hub_modules.pagetitle'), class: 'heading-extra-large content-hub__heading', level: 1 %>
      </section>

      <section class="l-content-hub__hero">
        <div class="l-content-hub__hero__inner">
          <div class="content-hub__hero__image"></div>
          <div class="l-content-hub__hero__content">
            <%= heading_tag t('content_hub_modules.hero.title'), class: 'content-hub__hero__title heading-large', level: 1 %>
            <p class="content-hub__hero__description"><%= t('content_hub_modules.hero.description') %></p>
            <button class="button button--primary content-hub__hero__button"><%= t('content_hub_modules.hero.button') %></button>
          </div>
        </div>
      </section>

      <section class="l-content-hub__modules">
        <div class="l-content-hub__modules__inner">
          <div class="l-content-hub__modules__content">
            <% t('content_hub_modules.modules').each do |block| %>
              <div class="l-content-hub__module content-hub__module--<%= block[:type] %>">
                <div class="l-content-hub__module__inner">
                  <% if (block.has_key?(:header)) then %>
                    <%= heading_tag block[:header], class: 'content-hub__module__title heading-medium', level: 1 %>
                  <% end %>
                  <% if (block.has_key?(:image)) then %>
                    <div class="l-content-hub__module__image" style="background-image:url(<%= block[:image] %>)"></div>
                  <% end %>
                  <div class="l-content-hub__module__content">
                    <% if (block.has_key?(:description)) then %>
                        <p class="content-hub__module__description"><%= block[:description] %></p>
                    <% end %>
                    <% if (block.has_key?(:link)) then %>
                      <button class="button button--primary content-hub__module__button"><%= block[:link] %></button>
                    <% end %>
                  </div>
                  <% if (block.has_key?(:links)) then %>
                    <ul class="content-hub__module__links unstyled-list">
                      <% block[:links].each do |link| %>
                        <li><a href="<%= link[:url] %>"><%= link[:text] %></a></li>
                      <% end %>
                    </ul>
                  <% end %>
                  <% if (block.has_key?(:cta)) then %>
                    <a href="#" class="content-hub__module__cta">
                      <%= block[:cta] %>
                      <svg xmlns="http://www.w3.org/2000/svg" class="svg-icon content-hub__module__cta-icon">
                        <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#svg-icon--stripe-banner-arrow"></use>
                      </svg>
                    </a>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </section>
    </div>
  </div>
</div>
