<% set_meta_tags(title: 'Content Hub') %>

<div class="l-content-hub__main">
  <div class="l-content-hub__inner">
    <div class="l-constrained">
      <section class="l-content-hub__title">
        <%= heading_tag t('content_hub_blocks.pagetitle'), class: 'heading-extra-large content-hub__heading', level: 1 %>
      </section>

      <section class="l-content-hub__hero">
        <div class="l-content-hub__hero__inner">
          <div class="content-hub__hero__image"></div>
          <div class="l-content-hub__hero__content">
            <%= heading_tag t('content_hub_blocks.hero.title'), class: 'content-hub__hero__title heading-large', level: 1 %>
            <p class="content-hub__hero__description"><%= t('content_hub_blocks.hero.description') %></p>
            <%= form_tag t('content_hub_blocks.hero.button.url'), method: :get do %>
              <button class="button button--primary content-hub__hero__button"><%= t('content_hub_blocks.hero.button.text') %></button>
            <% end %>
          </div>
        </div>
      </section>

      <section class="l-content-hub__modules">
        <div class="l-content-hub__modules__inner">
          <div class="l-content-hub__modules__content">
            <% t('content_hub_blocks.blocks').each do |block| %>
              <%= render partial: "/content_hub/blocks/#{block[:type]}", locals: { block: block } %>
            <% end %>
          </div>
        </div>
      </section>
    </div>
  </div>
</div>
