<h1><%= singular_noun_possessive(current_user.first_name) %> <%= t('.word_page') %></h1>
<p class="intro"><%= t('.intro') %></p>
<h2><%= t('.goal_heading') %></h2>
<p><%= t('.goal_introduction') %></p>
<%= form_for current_user, html: {id: 'goal_form', class: 'form'}, url: profile_path, method: :put do |f| %>
  <div class="form__row">
    <label for="goal_text" class="form__label-heading"><%= t('.goal_text_label') %></label>
    <input type="text" name="goal_text" aria-describedby="frmhint1" value="<%= current_user.goal_text %>">
  </div>
  <div class="form__row">
    <label for="goal_date" class="form__label-heading"><%= t('.goal_date_label') %></label>
    <input type="text" name="goal_date" aria-describedby="frmhint1" value="<%= current_user.goal_date %>">
  </div>
  <div class="form__row">
    <input class="button button--primary" type="submit" value="<%= t('.goal_save_label') %>">
  </div>
<% end %>
