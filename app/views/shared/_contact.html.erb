<div class="contact">
  <div class="l-constrained">

    <div class="l-contact-cell">
      <h2 class="contact__heading"><%= t('contact.heading') %></h2>

      <p class="contact__introduction"><%= t('contact.introduction') %></p>
    </div>

    <div class="l-contact-cell bubble">
      <p class="bubble__heading"><%= t('contact.call_us') %>&hellip;</p>
      <a class="bubble__text" href="<%= t('contact.telephone_number_href') %>"><%= t('contact.telephone_number') %></a>
    </div>

    <div class="l-contact-cell l-contact-cell--separated">
      <h3 class="contact__details-heading"><%= t('contact.opening_hours_heading') %></h3>

      <p class="contact__details-text"><%= t('contact.opening_hours_html') %></p>

      <p class="contact__details-text"><%= t('contact.call_charges_html') %></p>
    </div>

    <div class="l-contact-cell">
      <%= render partial: 'newsletter/subscriptions/form' %>
    </div>

  </div>
</div>
