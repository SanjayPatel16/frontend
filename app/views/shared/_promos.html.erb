<div class="l-constrained">
  <section class="clearfix">
    <% items.each do |item| %>
      <div class="promo l-homepage-promo">
        <%= heading_tag(level: 2, class: 'promo__heading') do %>
          <%= link_to item[:url] do %>
            <%= image_tag("promos/#{item[:image]}", alt: '') %>
            <span class="promo__heading-text"><%= item[:text] %></span>
          <% end %>
        <% end %>

        <p class="promo__content"><%= item[:content] %></p>
      </div>
    <% end %>
  </section>
</div>
