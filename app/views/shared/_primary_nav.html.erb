<% if category_navigation.present? %>
  <ul class="primary-nav">

    <% category_navigation.each do |category| %>
      <li class="primary-nav__item">
        <a href="/categories/<%= category.id %>"><%= category.title %></a>

        <% if category.sub_categories.present? %>
          <div class="l-primary-nav-dropdown primary-nav__dropdown">
            <ul class="menu">
              <% category.sub_categories.each do |sub_category| %>
                <li><a href="/categories/<%= sub_category.id %>"><%= sub_category.title %></a></li>
              <% end %>
            </ul>
          </div>
        <% end %>

      </li>
    <% end %>

  </ul>
<% end %>
