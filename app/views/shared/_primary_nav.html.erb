<% if categories.present? %>
  <ul class="primary-nav" id="primary-nav">

    <% categories.each do |category| %>
      <li class="primary-nav__item">
        <%= link_to category.title, category.path, class: 'primary-nav__link' %>

        <% if category.contents.present? %>
          <div class="primary-nav__dropdown l-primary-nav-dropdown">
            <ul class="menu">
              <% category.contents.each do |sub_category| %>
                <li><%= link_to sub_category.title, sub_category.path %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

      </li>
    <% end %>
  </ul>
<% end %>
