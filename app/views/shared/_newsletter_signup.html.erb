<%= form_tag(main_app.newsletter_subscription_path, class: 'newsletter-signup t-newsletter', remote: true) do %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token -%>

  <h2 class="newsletter-signup__heading"><%= t('newsletter_subscriptions.title') %></h2>

  <ul class="newsletter-signup__benefits-list list-benefits">
    <% t('newsletter_subscriptions.benefits').each do |benefit| %>
      <li><%= benefit %></li>
    <% end %>
  </ul>

  <fieldset class="newsletter-signup__form js-newsletter-form">
    <legend class="visually-hidden"><%= t('newsletter_subscriptions.hidden_title') %></legend>
    <%= label_tag('subscription[email]', t('newsletter_subscriptions.label'), class: 'newsletter-signup__label') %>
    <%= text_field_tag('subscription[email]', nil, class: 't-newsletter-email js-newsletter-input newsletter-signup__input', placeholder: 'example@example.com') %>
    <%= button_tag(t('newsletter_subscriptions.button'), type: 'submit', class: 't-newsletter-button button button--inline-input newsletter-signup__button') %>
  </fieldset>
<% end %>
