<ul class="breadcrumbs unstyled-list">
  <li class="breadcrumb"><%= link_to(t('layouts.base.home'), root_path) %></li>
  <% categories.each do |category| %>
  <li class="breadcrumb" itemscope itemtype="http://data-vocabulary.org/Breadcrumb">
    <span class="breadcrumb__divider"></span>
    <%= link_to category.path, itemprop: "url" do %>
      <span itemprop="title"><%= category.title %></span>
    <% end %>
  </li>
  <% end %>
</ul>
