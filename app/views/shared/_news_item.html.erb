<article>
  <%= heading_tag(level: 2, class: 'heading-small') do %>
    <%= link_to news_article.title, root_path %>
  <% end %>

  <p class="smallprint">
    <time itemprop="datePublished" datetime=<%= news_article.date(format: :long) %>><%= news_article.date %>
    </time>
  </p>
<p class='t-news-description'><%= news_article.description %></p>
</article>
