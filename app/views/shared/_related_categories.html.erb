<div class="related-categories">
  <h2 class="related-categories_heading"><%= t('related_categories.title') %>:&nbsp;</h2>
  <% categories.each do |category| %>
    <%= link_to category.title, category.path, class: 'related-categories__link' %>
    <span class="related-categories__divider">&nbsp;|&nbsp;</span>
  <% end %>
</div>
