<% set_meta_tags(alternate: alternate_options) %>

<%= render layout: 'layouts/unconstrained' do %>
  <% content_for(:alternate_link) do %>
    <%= link_to(alternate_url, lang: alternate_locale, class: "t-#{alternate_locale}-link footer-secondary__link") do %>
      <span class="icon icon--globe"></span>
      <%= t("locales.#{alternate_locale}") %>
    <% end %>
  <% end %>

  <div class="l-context-bar">
    <div class="l-constrained">
      <%= render 'shared/breadcrumbs', breadcrumbs: breadcrumbs %>
    </div>
  </div>

  <div class="l-constrained">
    <div class="temp-tool-placeholder">
      <%= yield :engine_content %>
    </div>
  </div>

  <div class="l-tool-nav">
    <div class="l-constrained">
      <section class="tool-nav">
        <%= render 'shared/directory',
                   items: category_navigation, heading_level: 4 %>
      </section>
    </div>
  </div>
<% end %>
