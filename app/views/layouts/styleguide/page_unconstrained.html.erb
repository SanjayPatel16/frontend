<%= render layout: 'layouts/styleguide/base' do %>
  <a class="skip-to-link" href="#main"><%= t('skip_links.to_main_content') %></a>

  <% if display_skip_to_main_navigation? %>
    <a class="skip-to-link" href="#primary-nav"><%= t('skip_links.to_main_nav') %></a>
  <% end %>

  <%= render 'shared/header' %>

  <% if content_for?(:context_bar) %>
    <div class="l-context-bar">
      <div class="l-constrained">
        <%= yield :context_bar %>
      </div>
    </div>
  <% end %>

  <%= yield %>
  <%= render 'shared/contact_panels', contact_panels_border_top: contact_panels_border_top?, contact_panels_no_top_border_and_margin: contact_panels_no_top_border_and_margin? %>
  <%= render 'shared/footer' %>
<% end %>
