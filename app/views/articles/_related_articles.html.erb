<% if @article.related_links.present? %>
  <%= render 'articles/article_links', title: t('.related_links_title'), article_links: @article.related_links, classes: 'related-links__heading--guides', open: true, type: type %>
<% end %>

<% if @article.popular_links.present? %>
  <%= render 'articles/article_links', title: t('.popular_links_title'), article_links: @article.popular_links, classes: 'related-links__heading--popular', open: @article.related_links.present? ? false : true, type: type %>
<% end %>

<% if @article.latest_blog_post_links.present? %>
  <%= render 'articles/article_links', title: t('.latest_blog_posts_title'), article_links: @article.latest_blog_post_links, classes: 'related-links__heading--blog', open: false, type: type %>
  <%= t('articles.related_articles.latest_blog_posts_note') %>
<% end %>
