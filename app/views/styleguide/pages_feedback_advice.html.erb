<% content_for(:context_bar) do %>
  <%= render 'shared/breadcrumbs', breadcrumbs: categories %>
<% end %>

<div class="l-main editorial">
  <div class="l-main__row">
    <main class="l-main__cell-single" role="main">
      <h1>Help and money advice</h1>

      <p>For help and money advice, please contact us:</p>

      <div class="call-us">
        <h2 class="call-us__title"><%= t('contact.call_us') %></h2>

        <a href="<%= t('contact.telephone_number_href') %>" class="call-us__number"><%= t('contact.telephone_number') %></a>

        <p class="call-us__opening_hours">
          <%= t('contact.opening_hours_html') %>
