<section class="graduated-section">
  <div class="l-constrained">
    <div class="l-1col">
      <div class="graphic-info-box">
        <div class="graphic-info-box__top-dot"></div>
        <h2 class="graphic-info-box__heading">
          <%= t('pension_savings_timeline.starting_out_section.title') %>
        </h2>
        <div class="graphic-info-box__illustration">
          <%= image_tag "retirement_concepts/getting-started@2x.png", alt: t('pension_savings_timeline.starting_out_section.image_alt') %>
        </div>
        <p class="graphic-info-box__copy">
          <%= t('pension_savings_timeline.starting_out_section.intro_text') %>
        </p>
        <div class="graphic-info-box__line-fade-in"></div>
      </div>
      <div class="linear">
        <div class="line-marker line-marker--waypoint">
          <div class="line-marker__small-outline-dot"></div>
        </div>
        <div class="speech-bubble speech-bubble--right">
          <h3>
          <%= t('pension_savings_timeline.starting_out_section.starting_a_pension.title') %>
          </h3>
          <p>
          <%= t('pension_savings_timeline.starting_out_section.starting_a_pension.text') %>
          </p>
          <p>
            <%= link_to t('pension_savings_timeline.starting_out_section.starting_a_pension.link'), t('pension_savings_timeline.starting_out_section.starting_a_pension.url') %>
          </p>
        </div>
      </div>
      <div class="linear">
        <div class="line-marker line-marker--waypoint">
          <div class="line-marker__small-outline-dot"></div>
        </div>
        <div class="speech-bubble speech-bubble--left">
          <h3>
            <%= t('pension_savings_timeline.starting_out_section.deciding_how_much_to_save.title') %>
          </h3>
          <p>
            <%= t('pension_savings_timeline.starting_out_section.deciding_how_much_to_save.text') %>
          </p>
          <p>
            <%= link_to t('pension_savings_timeline.starting_out_section.deciding_how_much_to_save.link'),t('pension_savings_timeline.starting_out_section.deciding_how_much_to_save.url')  %>
          </p>
        </div>
      </div>
    </div>
  </div>
</section>
